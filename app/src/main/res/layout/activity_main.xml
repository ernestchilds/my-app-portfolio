<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center"
        android:padding="4dp"
        android:textColor="#616161"
        android:textSize="30sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:fontFamily="sans-serif-bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#F08C35"
        android:layout_marginBottom="8dp"
        android:onClick="toastMessage"/>

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Football Scores App"
        android:fontFamily="sans-serif-bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#F08C35"
        android:layout_marginBottom="8dp"
        android:onClick="toastMessage"/>

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:fontFamily="sans-serif-bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#F08C35"
        android:layout_marginBottom="8dp"
        android:onClick="toastMessage"/>

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:fontFamily="sans-serif-bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#F08C35"
        android:layout_marginBottom="8dp"
        android:onClick="toastMessage"/>

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:fontFamily="sans-serif-bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#F08C35"
        android:layout_marginBottom="8dp"
        android:onClick="toastMessage"/>

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Capstone My Own App"
        android:fontFamily="sans-serif-bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#D70E51"
        android:onClick="toastMessage"/>

</LinearLayout>
